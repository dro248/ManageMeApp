<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="manageme.managemeapp.MainScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView3"
            app:srcCompat="@drawable/ic_hammer"
            android:layout_height="150dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:text="Welcome, David!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="25sp"
            android:textAlignment="center" />

        <TextView
            android:text="Current Address: The Bavarian #504"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentAddressTextView"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:minHeight="30dp"
            android:layout_height="30dp" />

        <Button
            android:text="Create Maintenance Request"
            android:layout_width="match_parent"
            android:id="@+id/create_request_button"
            android:elevation="24dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_weight="0.14"
            android:layout_height="45dp" />

        <Button
        android:text="View Existing Requests"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/view_pending_requests_button"
        android:layout_weight="0.20" />
    </LinearLayout>
</RelativeLayout>
